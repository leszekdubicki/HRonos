<p id="notice"><%= notice %></p>

<h1>Listing Vacation Requests</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Comments</th>
      <th>Manager comments</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacation_requests.each do |vacation_request| %>
      <tr>
        <td><%= vacation_request.employee %></td>
        <td><%= vacation_request.start_date %></td>
        <td><%= vacation_request.end_date %></td>
        <td><%= vacation_request.comments %></td>
        <td><%= vacation_request.manager_comments %></td>
        <td><%= vacation_request.approved %></td>
        <td><%= link_to 'Show', vacation_request %></td>
        <td><%= link_to 'Edit', edit_vacation_request_path(vacation_request) %></td>
        <td><%= link_to 'Destroy', vacation_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

